<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#e3f3ff">


    <RelativeLayout
        android:id="@+id/czh_img"
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:background="@drawable/tijiao"
        >

        <TextView
            android:id="@+id/czh_tv13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-12-23"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
 />

        <TextView
            android:id="@+id/czh_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_alignBottom="@+id/czh_tv14"
            android:layout_marginLeft="50dp"


            />

        <TextView
            android:id="@+id/czh_tv14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="CA1814"
            android:textColor="#ffffff"



            />

        <TextView
            android:id="@+id/czh_tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="南京"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_alignBottom="@+id/czh_tv14"
            android:layout_marginLeft="300dp"

            />

        <TextView
            android:id="@+id/czh_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21:20"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/czh_tv15"
            android:layout_alignLeft="@+id/czh_tv1"
            />

        <ImageView
            android:id="@+id/czh_tv15"
            android:layout_width="90dp"
            android:layout_height="10dp"
            android:textColor="#ffffff"
            android:layout_below="@+id/czh_tv14"
            android:layout_centerHorizontal="true"
            android:background="@drawable/row"
            />

        <TextView
            android:id="@+id/czh_tv16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23:25"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/czh_tv15"
            android:layout_alignRight="@+id/czh_tv4"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/czh_img"
        android:layout_marginTop="16dp"
        >
        <TextView
            android:id="@+id/czh_tv5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="联系人:"
            android:textSize="20dp"
            android:textColor="#107e8b"
            android:layout_marginLeft="19dp"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/czh_et1"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/czh_tv5"
            android:textSize="20dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/name"
        android:background="#FFFFFF"
        android:layout_marginTop="16dp"
        >
        <TextView
            android:id="@+id/czh_tv7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="手机号:"
            android:textSize="20dp"
            android:textColor="#107e8b"
            android:background="#ffffff"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/czh_et2"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/czh_tv7"
            android:layout_toRightOf="@+id/czh_tv7"
            android:textSize="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/identity"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_below="@+id/phone"
        android:background="#FFFFFF"
        android:layout_marginTop="19dp"
        >
        <TextView
            android:id="@+id/czh_tv9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证:"
            android:textSize="20dp"
            android:textColor="#107e8b"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:gravity="center"
/>


        <EditText
            android:id="@+id/czh_et3"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/czh_tv9"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_below="@+id/identity"
        android:background="#FFFFFF"
        android:layout_marginTop="16dp"
        >
        <TextView
            android:id="@+id/czh_tv11"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="车票价:"
            android:textSize="20dp"
            android:textColor="#107e8b"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/czh_tv12"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:textColor="#ff0000"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/czh_bt1"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/price"
        android:layout_marginTop="16dp"
        android:text="提交订单"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="@drawable/pswshape"
        android:layout_margin="5dp"
        />

</RelativeLayout>
